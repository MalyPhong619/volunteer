<h1 class="jumbotron"><%= @project.title %></h1>

<div class="row">
  <div class="col-md-6">
    <form method="post">
      <label for="name">Volunteer Name: </label>
      <input type="text" name="name" id="name">
      <button type="submit" class="btn btn-info">Add Volunteer</button>
    </form>
    <a href="/"><button type="button" class="btn btn-info">Home</button> </a>
  </div>

  <div class="col-md-6">
    <h2>Volunteers:</h2>
    <% @volunteers.each do |volunteer| %>
    <ul>
      <% if @project.id == volunteer.project_id %>
      <li><%= volunteer.name %></li>
      <% end %>
    </ul>
    <% end %>
  </div>
</div>
